<h1>Properties:</h1>
<% @properties.each do |property| %>
  <div class="property card my-3 p-3">
    <h2>
      <%= link_to property.name, property_units_path(property), class: "text-primary" %>
    </h2>
    <p>
      <%= property.address %>
    </p>
    <div class="property-actions d-flex justify-content-between mt-3">
      <%= link_to edit_property_path(property), class: "btn btn-warning" do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>
      <%= link_to property, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" do %>
        <i class="fas fa-trash"></i> Delete
      <% end %>
    </div>
  </div>
<% end %>

<div class="back-button mt-4">
  <%= link_to 'Add new property', new_property_path, class: 'btn btn-primary' %>
</div>
