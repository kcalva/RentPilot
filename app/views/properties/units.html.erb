<h1>Units for <%= @property.name %></h1>
<p>Address: <%= @property.address %> </p>
<br>
<% @units.each do |unit| %>
  <div class="unit card my-3 p-3">
    <h2>
      Unit <%= unit.unit_number %>
    </h2>
    <% if unit.tenant %>
      <p>
        Tenant: <%= link_to unit.tenant.name, tenant_path(unit.tenant), class: "text-primary" %>
      </p>
    <% else %>
      <p>Tenant: Not assigned</p>
    <% end %>

    <div class="unit-actions d-flex justify-content-between mt-3">
      <%= link_to edit_unit_path(unit), class: "btn btn-warning" do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>

      <%= link_to unit, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" do %>
        <i class="fas fa-trash"></i> Delete
      <% end %>
    </div>
  </div>
<% end %>

<div class="back-button mt-4">
  <%= link_to 'Back to Properties', properties_path, class: 'btn btn-secondary' %>
  <%= link_to 'Add New Unit', new_unit_path(property_id: @property.id), class: 'btn btn-primary' %>

</div>
