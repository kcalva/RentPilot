<div class="actions d-flex justify-content-between mt-3">
  <%= link_to edit_path, class: "btn btn-warning" do %>
    <i class="fas fa-edit"></i> Edit
  <% end %>
  <%= link_to delete_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" do %>
    <i class="fas fa-trash"></i> Delete
  <% end %>
</div>
