<h1 class="text-center"><%= "Lease for #{@tenant.name}" %></h1>

<div class="container mt-4">
  <div class="row justify-content-center">
    <!-- Current Lease Column -->
    <div class="<%= current_user.landlord? ? 'col-md-6' : 'col-md-8 text-center' %>">
      <h2>Current Lease</h2>
      <% if @current_lease %>
        <div class="card mb-4 mx-auto" style="max-width: 500px;">
          <div class="card-body">
            <%= render 'lease', lease: @current_lease %>

            <%= form_with(model: @current_lease, local: false, html: { multipart: true }) do |form| %>
              <div class="form-group">
                <%= form.label :pdf, "Upload Lease PDF" %>
                <%= form.file_field :pdf, class: "form-control" %>
              </div>
              <%= form.submit "Upload", class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      <% else %>
        <p>No current lease.</p>
      <% end %>
    </div>
  </div>

  <% if current_user.landlord? %>
    <div class="row">
      <h2 class="col-12">Past Leases</h2>
      <% if @past_leases.any? %>
        <% @past_leases.each_slice(2) do |lease_pair| %>
          <div class="row">
            <% lease_pair.each do |lease| %>
              <div class="col-md-6">
                <div class="card mb-4">
                  <div class="card-body">
                    <%= render 'lease', lease: lease %>
                    <%= form_with(model: @current_lease, local: false, html: { multipart: true }) do |form| %>
                      <div class="form-group">
                        <%= form.label :pdf, "Upload Lease PDF" %>
                        <%= form.file_field :pdf, class: "form-control" %>
                      </div>
                      <%= form.submit "Upload", class: "btn btn-success" %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p>No past leases.</p>
      <% end %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "New lease", new_lease_path, class: 'btn btn-success' %>
    <div class="back-button mt-3">
      <%= link_to 'Back to Tenant Dashboard', tenant_path(@tenant), class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
